<resources>
    <style name="Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional: better status bar handling -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorSurface">#82C8E5</item>
    </style>

    <style name="ThemeOverlay.Weather.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- This controls the dialog buttons color -->
        <item name="buttonBarPositiveButtonStyle">@style/Weather.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Weather.DialogButton</item>
    </style>

    <style name="Weather.DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>